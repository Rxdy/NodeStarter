{
  "compilerOptions": {
      "rootDir": ".", // Racine à server/, inclut src/, tests/, config/
      "outDir": "dist",
      "target": "es6",
      "module": "commonjs",
      "strict": true,
      "baseUrl": "src", // Imports relatifs à src/
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "types": ["jest"],
      "paths": {
          "@config/*": ["../config/*"] // Ajusté pour server/config/
      }
  },
  "include": ["src/**/*", "tests/**/*", "config/**/*", "jest.config.ts"] 
}
